<h1>Burgers!</h1>


<div class="container">


  <div class="row">
    <div class="col-sm-6">
      <h2>Burgers To Devour!</h2>
         <ul>
             {{#each burgers}}
               {{#unless devoured}}
                 {{>burger-block devoured=true}}
               {{/unless}}
             {{/each}}
         </ul>
     </div>
   
   

  <div class="col-sm-6">
       <h2>Burgers Devoured!</h2>

        <ul>
             {{#each burgers}}
               {{#if devoured}}
                 {{>burger-block devoured=false}}
               {{/if}}
              {{/each}}
        </ul>
  </div>

</div>


<div class="row">
    <div class="center col-sm-12">
<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <input type="text" id="new-burger" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devoured">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Not Devoured!
  </div>
  <button type="submit">Add Burger</button>
</form>
</div>
</div>


